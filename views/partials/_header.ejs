<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav ml-auto" id="login">
        <% if(!user) {%>
        <form
          style="
            display: flex;
            flex-direction: row-reverse;
            align-items: center;
          "
          id="loginForm"
          class="form-inline"
          action="/login"
          method="POST"
        >
          <div class="nav-item nav-link">
          
            <button
            id="login"
              type="submit"
              class="btn btn-login"
              style="border-color: darkslategray; color: darkslategray"
            >
              Login
            </button>
          </form>
            <%} else {%>
            <p
              class="nav-item nav-link"
              style="
                display: flex;
                flex-direction: row-reverse;
                align-items: center;
                width: 300px;
                margin: 1em;
                font-size: large;
              "
            >
              Logged in as: <%= user.email%>
            </p>
            <form
            style="
              display: flex;
              flex-direction: row-reverse;
              align-items: center;
            "
            id="logoutForm"
            class="form-inline"
            action="/logout"
            method="POST"
          >
            <button
              type="submit"
              class="btn btn-login"
              style="
                border-color: darkslategray;
                color: darkslategray;
                width: 100px;
                margin: 1em;
              "
            >
              Logout
            </button>
            <%}%>
            </form>
          </div>
        
      </div>
    </div>
  </nav>
</header>
